<div class="container">
  <div class="row">
  <div class="col-xs-10 col-xs-offset-1">
      <div class="product">
        <div class='product-upvote'>
          <div class="product-arrow"></div>
          <div class='product-count'>95</div>
        </div>
        <%= cl_image_tag cocktail.photo, {class: "product-image"} %>
        <div class='product-body'>
          <h2><%= cocktail.name %></h2>
          <p><%= cocktail.ingredients.first.name %></p>
          <%= link_to "Show Ingredients", cocktail_path(cocktail) %>
        </div>
        <ul class="list-inline product-controls">
          <li><%= link_to "Show Ingredients", cocktail_path(cocktail), {class: "btn btn-success"} %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
